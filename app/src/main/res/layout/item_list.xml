<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardElevation="1dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_article_item_author_icon"
                android:layout_alignParentTop="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_border_color_edit_pressed_24dp"
                android:alpha="0.3"/>

            <TextView
                android:id="@+id/tv_article_item_author_name"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/iv_article_item_author_icon"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:gravity="center_vertical"
                android:textSize="10sp"
                android:text="你妈斯坦"
                android:alpha="0.3"/>

            <TextView
                android:layout_below="@id/tv_article_item_author_name"
                android:id="@+id/tv_article_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="5dp"
                android:textSize="18sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>